{
	"name": "PL_Initial_Load_Single_Table",
	"properties": {
		"activities": [
			{
				"name": "Copy Data to Bronze",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.02:00:00",
					"retry": 2,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": {
							"value": "@concat('SELECT *, CHANGE_TRACKING_CURRENT_VERSION() as _sync_version FROM [', pipeline().parameters.table_metadata.schema_name, '].[', pipeline().parameters.table_metadata.table_name, ']')",
							"type": "Expression"
						},
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "ParquetWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "DS_AzureSQL_Dynamic",
						"type": "DatasetReference",
						"parameters": {
							"source_system_id": "@pipeline().parameters.table_metadata.source_system_id",
							"schema_name": "@pipeline().parameters.table_metadata.schema_name",
							"table_name": "@pipeline().parameters.table_metadata.table_name"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "DS_Parquet_Bronze_Initial",
						"type": "DatasetReference",
						"parameters": {
							"source_system_id": "@pipeline().parameters.table_metadata.source_system_id",
							"schema_name": "@pipeline().parameters.table_metadata.schema_name",
							"table_name": "@pipeline().parameters.table_metadata.table_name",
							"timestamp": "@pipeline().RunId"
						}
					}
				]
			},
			{
				"name": "Notebook Initial Processing",
				"type": "DatabricksNotebook",
				"dependsOn": [
					{
						"activity": "Copy Data to Bronze",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.00:30:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"notebookPath": "/Shared/Databricks/databricks/notebooks/bronze/Initial_Load_Dynamic",
					"baseParameters": {
						"table_id": {
							"value": "@pipeline().parameters.table_metadata.table_id",
							"type": "Expression"
						},
						"source_system_id": {
							"value": "@pipeline().parameters.table_metadata.source_system_id",
							"type": "Expression"
						},
						"schema_name": {
							"value": "@pipeline().parameters.table_metadata.schema_name",
							"type": "Expression"
						},
						"table_name": {
							"value": "@pipeline().parameters.table_metadata.table_name",
							"type": "Expression"
						},
						"primary_key_columns": {
							"value": "@pipeline().parameters.table_metadata.primary_key_columns",
							"type": "Expression"
						},
						"is_composite_key": {
							"value": "@string(pipeline().parameters.table_metadata.is_composite_key)",
							"type": "Expression"
						},
						"source_path": {
							"value": "@concat('bronze/', pipeline().parameters.table_metadata.source_system_id, '/', pipeline().parameters.table_metadata.schema_name, '/', pipeline().parameters.table_metadata.table_name, '/initial_load/', pipeline().RunId)",
							"type": "Expression"
						},
						"pipeline_run_id": {
							"value": "@pipeline().RunId",
							"type": "Expression"
						}
					}
				},
				"linkedServiceName": {
					"referenceName": "AzureDatabricks1",
					"type": "LinkedServiceReference"
				}
			}
		],
		"parameters": {
			"table_metadata": {
				"type": "object"
			}
		},
		"annotations": []
	}
}