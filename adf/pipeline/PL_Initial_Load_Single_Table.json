{
    "name": "PL_Initial_Load_Single_Table",
    "properties": {
        "activities": [
            {
                "name": "Copy Data to Bronze",
                "type": "Copy",
                "dependsOn": [],
                "policy": {
                    "timeout": "0.02:00:00",
                    "retry": 2,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "userProperties": [],
                "typeProperties": {
                    "source": {
                        "type": "AzureSqlSource",
                        "sqlReaderQuery": {
                            "value": "@concat('SELECT *, CHANGE_TRACKING_CURRENT_VERSION() as _sync_version FROM [', pipeline().parameters.table_metadata.schema_name, '].[', pipeline().parameters.table_metadata.table_name, ']')",
                            "type": "Expression"
                        },
                        "queryTimeout": "02:00:00",
                        "partitionOption": "None"
                    },
                    "sink": {
                        "type": "ParquetSink",
                        "storeSettings": {
                            "type": "AzureBlobFSWriteSettings"
                        },
                        "formatSettings": {
                            "type": "ParquetWriteSettings"
                        }
                    },
                    "enableStaging": false
                },
                "inputs": [
                    {
                        "referenceName": "DS_AzureSQL_Dynamic",
                        "type": "DatasetReference",
                        "parameters": {
                            "source_system_id": "@pipeline().parameters.table_metadata.source_system_id",
                            "schema_name": "@pipeline().parameters.table_metadata.schema_name",
                            "table_name": "@pipeline().parameters.table_metadata.table_name"
                        }
                    }
                ],
                "outputs": [
                    {
                        "referenceName": "DS_Parquet_Bronze_Initial",
                        "type": "DatasetReference",
                        "parameters": {
                            "source_system_id": "@pipeline().parameters.table_metadata.source_system_id",
                            "schema_name": "@pipeline().parameters.table_metadata.schema_name",
                            "table_name": "@pipeline().parameters.table_metadata.table_name",
                            "timestamp": "@pipeline().RunId"
                        }
                    }
                ]
            },
            {
                "name": "Notebook Initial Processing",
                "type": "DatabricksNotebook",
                "dependsOn": [
                    {
                        "activity": "Copy Data to Bronze",
                        "dependencyConditions": [
                            "Succeeded"
                        ]
                    }
                ],
                "policy": {
                    "timeout": "0.00:30:00",
                    "retry": 0,
                    "retryIntervalInSeconds": 30,
                    "secureOutput": false,
                    "secureInput": false
                },
                "userProperties": [],
                "typeProperties": {
                    "notebookPath": "/bronze/Initial_Load_Dynamic",
                    "baseParameters": {
                        "table_id": "@pipeline().parameters.table_metadata.table_id",
                        "source_system_id": "@pipeline().parameters.table_metadata.source_system_id",
                        "schema_name": "@pipeline().parameters.table_metadata.schema_name",
                        "table_name": "@pipeline().parameters.table_metadata.table_name",
                        "primary_key_columns": "@pipeline().parameters.table_metadata.primary_key_columns",
                        "is_composite_key": "@string(pipeline().parameters.table_metadata.is_composite_key)",
                        "source_path": "@concat('bronze/', pipeline().parameters.table_metadata.source_system_id, '/', pipeline().parameters.table_metadata.schema_name, '/', pipeline().parameters.table_metadata.table_name, '/initial_load/', pipeline().RunId)",
                        "pipeline_run_id": "@pipeline().RunId"
                    }
                },
                "linkedServiceName": {
                    "referenceName": "LS_AzureDatabricks",
                    "type": "LinkedServiceReference"
                }
            }
        ],
        "parameters": {
            "table_metadata": {
                "type": "object"
            }
        },
        "annotations": []
    }
}
